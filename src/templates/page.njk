{% extends 'base.njk' %}

{% block content %}
    <style>
        .page-container {
            position: absolute;
            right: 0;
            left: 0;
        }
        .h2-container {
            padding-top: 100px;
            background-image: url("{{backgroundImagePath}}");
            min-height: 500px;
            margin-bottom: -200px;
        }

        .h2-container h2 {
            height: 100px;
            background-color: #7D939E;
            color: #fff;
            font-size: 3em;
            display: flex;
            align-items: center;
        }

        #titleOfPage {
            margin-left: 7vw;
        }

        .card {
            width: 80vw;
            background: #fff;
            box-shadow: 0px 0px 5px;
            margin: 20px auto;
            padding: 20px;
        }

        .card h3 {
            font-size: 2.1em;
        }

        .card p {
            max-width: 100%;
        }

        .page-list li {
            display: flex;
            padding: 25px 0;
        }

        .page-list img {
            width: 100px;
            height: auto;
            border-radius: 50%;
            padding-right: 20px;
        }

        .page-list p {
            margin-top: 5px;
            margin-bottom: 0;
        }

        #mission-statement {
            text-align: center;
            font-weight: bold;
            font-size: 1.3em;
        }
    </style>

    <section class="page-container">
        <div class="h2-container">
            <h2><span id="titleOfPage">{{titleOfPage}}</span></h2>
        </div>

        {% block pageContent %}{% endblock pageContent %}
    </section>

{% endblock %}
