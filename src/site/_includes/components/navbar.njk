{% set navPages = collections.all | eleventyNavigation %}
{% macro renderNavListItem(entry) -%}
<li {% if entry.url == page.url %} class="my-active-class"{% endif %} >
{%- if not entry.inertParent-%}
{% set linkClassname = 'nav-link nav-link__active' if page.url === entry.url else 'nav-link' %}
  <a href="{{ entry.url | url }}" class="{{linkClassname}}">{{ entry.title }}</a>
{%- else -%}
  {{ entry.title }}
{%-endif-%}
{%- if entry.children.length -%}
  <ul>
    {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
  </ul>
{%- endif -%}
</li>
{%- endmacro %}


<div id="nav-menu" class="mobile-nav-menu-wrapper">
  <button type="button" v-if="instantiated">${label}</button>
  <ul role="list" class="mobile-nav-menu">
  {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
  </ul>
</div>
